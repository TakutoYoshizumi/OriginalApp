select * from messages JOIN users ON messsages where(send_user_id=3 and receive_user_id=1) or(send_user_id=1 and receive_user_id=3);     

select * from profile where user_id="1";

select messages.send_user_id,messages.receive_user_id,messages.message_content,messages.created_at,profiles.image  from messages where (send_user_id=:send_user_id and receive_user_id=:receive_user_id) or (send_user_id=:receive_user_id and receive_user_id=:send_user_id);   

select * from messages JOIN profiles ON messages.receive_user_id = profiles.user_id where (send_user_id=:send_user_id and receive_user_id=:receive_user_id) or (send_user_id=:receive_user_id and receive_user_id=:send_user_id); 

select messages.send_user_id,messages.receive_user_id,messages.message_content,messages.created_at,profiles.image from messages JOIN profiles ON messages.receive_user_id = profiles.user_id where (send_user_id="1" and receive_user_id="3") or (send_user_id="3" and receive_user_id="1"); 
